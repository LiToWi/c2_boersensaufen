generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Table {
  id       Int     @id @default(autoincrement())
  name     String  @unique
  password String
  parties  Party[]
}

model Party {
  id      Int     @id @default(autoincrement())
  table   Table   @relation(fields: [tableId], references: [id])
  tableId Int
  name    String
  orders  Order[]
}

model Order {
  id        Int         @id @default(autoincrement())
  createdAt DateTime    @default(now())
  partyId   Int
  party     Party       @relation(fields: [partyId], references: [id])
  items     OrderItem[]
}

model OrderItem {
  id       Int   @id @default(autoincrement())
  orderId  Int
  drinkId  Int
  quantity Int
  drink    Drink @relation(fields: [drinkId], references: [id])
  order    Order @relation(fields: [orderId], references: [id])
}

model Drink {
  id            Int         @id @default(autoincrement())
  name          String
  currentPrice  Float
  regularPrice  Float
  lowBoundPrice Float
  categoryId    Int
  description   String?
  category      Category    @relation(fields: [categoryId], references: [id])
  orderItems    OrderItem[]
}

model Category {
  id     Int     @id @default(autoincrement())
  name   String  @unique
  drinks Drink[]
}
